<mvc:View controllerName="com.applexus.project2.controller.food_app"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" >
    <f:SimpleForm id="SimpleFormChange354"
    editable="true"
    layout="ResponsiveGridLayout"
    labelSpanXL="3"
    labelSpanL="3"
    labelSpanM="3"
    labelSpanS="12"
    adjustLabelSpan="false"
    emptySpanXL="4"
    emptySpanL="4"
    emptySpanM="4"
    emptySpanS="0"
    columnsXL="1"
    columnsL="1"
    columnsM="1"
    class="center-title">

            
            <f:content>
                <HBox id="_IDGenHBox1">
                    <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                        <Title text="" id="_IDGenTitle1" level="H1"></Title>
                    </VBox>
                </HBox>
                <FlexBox id="_IDGenFlexBox1" width="90%" justifyContent="Center" alignItems="Center" height="100%">
                    <VBox id="_IDGenVBox2" >
                        <FlexBox id="_IDGenFlexBox2" justifyContent="Center" class="sapUiSmallMargin">
                            <Label id="_IDGenLabel1" text="Login Form" class="Header_text_color"></Label>
                        </FlexBox>
                        <HBox id="_IDGenHBox2" >
                            <VBox id="_IDGenVBox3" class="sapUiSmallMarginEnd">
                                <Label id="_IDGenLabel2" text="First Name"></Label>
                                <Input id="_IDGenInput1" width="150px" placeholder="Enter first name"></Input>
                            </VBox>
                            <VBox id="_IDGenVBox4" >
                                <Label id="_IDGenLabel3" text="Last Name"></Label>
                                <Input id="_IDGenInput2" width="150px" placeholder="Enter last name"></Input>
                            </VBox>
                        </HBox>
                        <HBox id="_IDGenHBox3" >
                            <VBox id="_IDGenVBox5" class="sapUiSmallMarginEnd">
                                <Label id="_IDGenLabel" text="Email" ></Label>
                                <Input id="_IDGenInput3" width="150px" placeholder="Enter email"></Input>
                            </VBox>
                            <VBox id="_IDGenVBox6" >
                                <Label id="_IDGenLabel4" text="Phone number"></Label>
                                <Input id="_IDGenInput4" width="150px" placeholder="Enter phone number" ></Input>
                            </VBox>
                        </HBox>
                        <HBox id="_IDGenHBox4" >
                            <VBox id="_IDGenVBox7" class="sapUiSmallMarginEnd">
                                <Label id="_IDGenLabel5" text="Password"></Label>
                                <Input id="_IDGenInput5" width="150px" placeholder="Enter password" type="Password"></Input>
                            </VBox>
                            <VBox id="_IDGenVBox8" >
                                <Label id="_IDGenLabel6" text="Confirm Password"></Label>
                                <Input id="_IDGenInput6" width="150px" placeholder="Enter password" type="Password"></Input>
                            </VBox>
                        </HBox>
                        <HBox id="_IDGenHBox5" justifyContent="Center">
    <Button id="_IDGenButton1" type="Accept" text="Register" press="onRegisterPress" width="100%" />
</HBox>

                    </VBox>
                </FlexBox>
            </f:content>
        </f:SimpleForm>
    </Page>
</mvc:View>